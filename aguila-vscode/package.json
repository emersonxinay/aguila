{
    "name": "aguila-vscode",
    "displayName": "Lenguaje Águila",
    "description": "Soporte para el lenguaje de programación Aguila",
    "version": "2.6.3",
    "publisher": "aguila-lang",
    "author": {
        "name": "Emerson Espinoza",
        "url": "https://github.com/emersonxinay"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/emersonxinay/aguila.git"
    },
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "icon.png",
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:aguila"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    },
    "contributes": {
        "languages": [
            {
                "id": "aguila",
                "aliases": [
                    "Aguila",
                    "aguila"
                ],
                "extensions": [
                    ".ag"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icon.png",
                    "dark": "./icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "aguila",
                "scopeName": "source.aguila",
                "path": "./syntaxes/aguila.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "aguila",
                "path": "./snippets/aguila.json"
            }
        ]
    }
}