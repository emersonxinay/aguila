{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Aguila",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#interpolated_strings"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#classes"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#punctuation"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.aguila",
                    "match": "\\b(si|sino|mientras|para|en|funcion|retornar|romper|continuar|clase|nuevo|intentar|capturar|finalmente|lanzar|global|nolocal|pasar|eliminar|con|asincrono|esperar|ceder|segun|caso|defecto|imprime|imprimir|afirmar|let|yo)\\b"
                },
                {
                    "name": "keyword.control.import.aguila",
                    "match": "\\b(importar|desde|como)\\b"
                },
                {
                    "name": "keyword.operator.logical.aguila",
                    "match": "\\b(y|o|no)\\b"
                },
                {
                    "name": "constant.language.aguila",
                    "match": "\\b(verdadero|falso|nulo)\\b"
                },
                {
                    "name": "variable.language.this.aguila",
                    "match": "\\b(this|yo)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.aguila",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aguila",
                    "match": "\\\\."
                }
            ]
        },
        "interpolated_strings": {
            "name": "string.quoted.double.interpolated.aguila",
            "begin": "(a)(\")",
            "beginCaptures": {
                "1": {
                    "name": "storage.type.string.aguila"
                },
                "2": {
                    "name": "string.quoted.double.interpolated.aguila"
                }
            },
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aguila",
                    "match": "\\\\."
                },
                {
                    "begin": "\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.begin.aguila"
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.end.aguila"
                        }
                    },
                    "patterns": [
                        {
                            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
                            "name": "variable.interpolated.aguila"
                        },
                        {
                            "include": "$self"
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.aguila",
                    "match": "#.*$"
                }
            ]
        },
        "classes": {
            "patterns": [
                {
                    "match": "\\b(clase)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.control.class.aguila"
                        },
                        "2": {
                            "name": "entity.name.type.class.aguila"
                        }
                    }
                },
                {
                    "name": "entity.name.type.class.aguila",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.builtin.aguila",
                    "match": "\\b(leer|afirmar|conjunto|imprime|imprimir|reloj)\\b"
                },
                {
                    "match": "\\b(funcion)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
                    "captures": {
                        "1": {
                            "name": "keyword.control.def.aguila"
                        },
                        "2": {
                            "name": "entity.name.function.aguila"
                        },
                        "3": {
                            "name": "punctuation.definition.parameters.begin.aguila"
                        }
                    }
                },
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.call.aguila"
                        },
                        "2": {
                            "name": "punctuation.definition.arguments.begin.aguila"
                        }
                    }
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "match": "\\.([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": {
                            "name": "variable.other.property.aguila"
                        }
                    }
                },
                {
                    "name": "variable.parameter.aguila",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*[:=])"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.aguila",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "types": {
            "name": "storage.type.aguila",
            "match": "\\b(Numero|Texto|Logico|Lista|Diccionario|Conjunto)\\b"
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.aguila",
                    "match": "(\\+|\\-|\\*\\*|\\*|//|/|%|\\+=|\\-=)"
                },
                {
                    "name": "keyword.operator.comparison.aguila",
                    "match": "(==|!=|>|<|>=|<=)"
                },
                {
                    "name": "keyword.operator.assignment.aguila",
                    "match": "(=)"
                },
                {
                    "name": "keyword.operator.arrow.aguila",
                    "match": "(->)"
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.section.block.begin.aguila",
                    "match": "\\{"
                },
                {
                    "name": "punctuation.section.block.end.aguila",
                    "match": "\\}"
                },
                {
                    "name": "punctuation.section.parens.begin.aguila",
                    "match": "\\("
                },
                {
                    "name": "punctuation.section.parens.end.aguila",
                    "match": "\\)"
                },
                {
                    "name": "punctuation.section.brackets.begin.aguila",
                    "match": "\\["
                },
                {
                    "name": "punctuation.section.brackets.end.aguila",
                    "match": "\\]"
                },
                {
                    "name": "punctuation.separator.comma.aguila",
                    "match": ","
                },
                {
                    "name": "punctuation.terminator.statement.aguila",
                    "match": ";"
                }
            ]
        }
    },
    "scopeName": "source.aguila"
}