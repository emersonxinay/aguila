{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Aguila",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#interpolated_strings"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.aguila",
                    "match": "\\b(si|sino|mientras|para|en|hasta|retornar|importar|asincrono|esperar|nuevo|intentar|capturar|clase|funcion|segun|caso|defecto|imprimir)\\b"
                },
                {
                    "name": "keyword.operator.logical.aguila",
                    "match": "\\b(y|o|no)\\b"
                },
                {
                    "name": "constant.language.aguila",
                    "match": "\\b(verdadero|falso|nulo)\\b"
                },
                {
                    "name": "variable.language.this.aguila",
                    "match": "\\b(this)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.aguila",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aguila",
                    "match": "\\\\."
                }
            ]
        },
        "interpolated_strings": {
            "name": "string.quoted.double.interpolated.aguila",
            "begin": "f\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aguila",
                    "match": "\\\\."
                },
                {
                    "begin": "\\$\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.begin.aguila"
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.end.aguila"
                        }
                    },
                    "patterns": [
                        {
                            "include": "$self"
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.aguila",
                    "match": "#.*$"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.builtin.aguila",
                    "match": "\\b(leer|afirmar|conjunto)\\b"
                },
                {
                    "name": "support.function.method.aguila",
                    "match": "\\.(agregar|eliminar|insertar|longitud|contiene|ordenar|invertir|limpiar|copiar|unir|sublista|claves|valores|obtener|intersectar|diferencia|a_lista|mayusculas|minusculas|reemplazar|dividir|recortar|conectar|consulta|ejecutar|cerrar|parsear|stringificar|escribir|sin|cos|tan|sqrt|aleatorio)\\b"
                },
                {
                    "name": "entity.name.function.aguila",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.aguila",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "types": {
            "name": "storage.type.aguila",
            "match": "\\b(Numero|Texto|Logico|Lista|Diccionario|Conjunto)\\b"
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.aguila",
                    "match": "(\\+|\\-|\\*\\*|\\*|/|//|%|\\+=|\\-=)"
                },
                {
                    "name": "keyword.operator.comparison.aguila",
                    "match": "(==|!=|>|<|>=|<=)"
                },
                {
                    "name": "keyword.operator.assignment.aguila",
                    "match": "(=)"
                },
                {
                    "name": "keyword.operator.arrow.aguila",
                    "match": "(->)"
                }
            ]
        }
    },
    "scopeName": "source.aguila"
}