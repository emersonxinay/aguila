imprimir "===== PRUEBA DE INPUT ====="

nombre = leer("¿Cómo te llamas? ")
imprimir "Hola, " + nombre

edad = leer("¿Cuál es tu edad? ")
imprimir "Tu edad es: " + edad
imprimir "El doble de tu edad es: " + (edad * 2)

es_programador = leer("¿Eres programador? (verdadero/falso) ")
si es_programador {
    imprimir "¡Genial! A programar en Águila."
} sino {
    imprimir "¡Nunca es tarde para aprender!"
}
